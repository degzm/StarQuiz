<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    tools:context=".MenuPrinci">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="274dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/test" />

    <ScrollView
        android:layout_width="413dp"
        android:layout_height="641dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="4dp"
        android:background="#00C3BEB9"
        android:clipToPadding="true"
        android:fillViewport="true"
        android:scrollbarStyle="outsideInset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnMalteada"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:background="#FFFFFF"
                android:drawableEnd="@drawable/bebida"
                android:drawableRight="@drawable/bebida"
                android:gravity="center|center_horizontal"
                android:text="@string/malts_test" />

            <Button
                android:id="@+id/btnTemps"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:background="#FFFFFF"
                android:drawableEnd="@drawable/temperatura"
                android:drawableRight="@drawable/temperatura"
                android:text="@string/temps_test" />

            <Button
                android:id="@+id/btnFront"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:background="#FFFFFF"
                android:drawableEnd="@drawable/cena"
                android:drawableRight="@drawable/cena"
                android:text="@string/center_test" />

            <Button
                android:id="@+id/btnChem"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:background="#FFFFFF"
                android:drawableRight="@drawable/quimico"
                android:text="@string/chemicals_test" />

            <Button
                android:id="@+id/btnDining"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:background="#FFFFFF"
                android:drawableRight="@drawable/casa"
                android:text="@string/dining_test" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>